<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/white"
    android:padding="@dimen/padding_1"
    app:cardCornerRadius="2dp"

    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_rental_matches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"

        android:background="@color/gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="2dp">


            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/any_emi_launcher"
                android:textStyle="normal|bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                    android:id="@+id/tv_shop_name"
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/ColorPrimary.Header"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_payment_gateway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                style="@style/TextView.Header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Credit/Debit"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                style="@style/TextView.Header"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Net Banking"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                style="@style/TextView.Header"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Wallets"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_hdfc_gateway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                style="@style/TextView.Header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Credit/Debit"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                style="@style/TextView.Header"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Net Banking"
                android:textColor="@color/black"
                android:textSize="12sp" />



        </LinearLayout>
    </LinearLayout>
</LinearLayout>






