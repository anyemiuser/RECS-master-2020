<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:orientation="vertical">

              <com.anyemi.recska.ui_components.MyTextViewArial

                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Due Date" />

                <com.anyemi.recska.ui_components.MyTextViewArial

                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Last Paid Date" />

                <com.anyemi.recska.ui_components.MyTextViewArial

                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Last Paid Amount" />

                <com.anyemi.recska.ui_components.MyTextViewArial

                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Bill Amount" />

                <com.anyemi.recska.ui_components.MyTextViewArial
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Adjustment Amount" />

                <com.anyemi.recska.ui_components.MyTextViewArial
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Arrears"
                    />


                <com.anyemi.recska.ui_components.MyTextViewArial

                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Service Charge" />

                <com.anyemi.recska.ui_components.MyTextViewArial
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Reconnection Fee" />

                <com.anyemi.recska.ui_components.MyTextViewArial
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Sur Charge" />


                <com.anyemi.recska.ui_components.MyTextViewArial
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="Total" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">


                <com.anyemi.recska.ui_components.MyTextViewArial
                    android:id="@+id/tv_due_date"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Due Date" />

                <TextView
                    android:id="@+id/tv_last_paid_date"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Last Paid Date" />

                <TextView
                    android:id="@+id/tv_last_paid_amount"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Last Paid Amount" />

                <TextView
                    android:id="@+id/tv_due"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Bill Amount" />



                <TextView
                    android:id="@+id/tv_adj_amount"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Adj Amount" />
                <TextView
                    android:id="@+id/tv_arrears"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Arrears" />



                <TextView
                    android:id="@+id/tv_fine"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Fine" />

                <TextView
                    android:id="@+id/tv_rec"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Reconnection" />

                <TextView
                    android:id="@+id/tv_surcharge"
                    style="@style/TextView.Standard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="Sur Charge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_total"
                        style="@style/TextView.Standard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="Total" />

                    <CheckBox
                        android:id="@+id/chbk_check_amount"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>






