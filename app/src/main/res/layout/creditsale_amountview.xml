<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:background="#f2f2f2" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" >

                <!-- the widgets for the Amount -->

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false" >



                    <LinearLayout
                        android:id="@+id/creditsale_REL_saledetails"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_large"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal" >

                                <Button
                                    android:id="@+id/creditsale_BTN_connectGateway"
                                    android:layout_width="match_parent"
                                    android:layout_height="44dp"
                                    android:background="@drawable/roundrectblue"
                                    android:gravity="center"
                                    android:text="Connect Gateway"
                                    android:textColor="#ffffff"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="25dp"
                                    android:typeface="sans" />
                            </LinearLayout>

                            <com.mswipetech.wisepos.demo.sdk.customviews.DecAmtEditText
                                android:id="@+id/creditsale_TXT_amount"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:ellipsize="start"
                                android:gravity="right|center_vertical"
                                android:hint="Amount"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="10"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textSize="22dp"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/creditsale_LNR_tipamount"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/creditsale_LBL_tipamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="22dp" />

                            <com.mswipetech.wisepos.demo.sdk.customviews.DecAmtEditText
                                android:id="@+id/creditsale_TXT_tipamount"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:ellipsize="start"
                                android:gravity="right|center_vertical"
                                android:hint="Tip Amount"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="10"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textSize="22dp"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/creditsale_LNR_conviencefee"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/creditsale_LBL_conveniencepercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="22dp" />

                            <EditText
                                android:id="@+id/creditsale_TXT_conveniencepercentage"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/edittext_modified_states"
                                android:editable="false"
                                android:ellipsize="start"
                                android:focusable="false"
                                android:gravity="right|center_vertical"
                                android:hint="0.00"
                                android:imeOptions="actionNext"
                                android:inputType="none"
                                android:maxLength="12"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null"
                                android:textSize="28sp"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/creditsale_LNR_servicetaxpercentage"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/creditsale_LBL_servicetaxpercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="22dp" />

                            <EditText
                                android:id="@+id/creditsale_TXT_servicetaxpercentage"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/edittext_modified_states"
                                android:editable="false"
                                android:ellipsize="start"
                                android:focusable="false"
                                android:gravity="right|center_vertical"
                                android:hint="0.00"
                                android:imeOptions="actionNext"
                                android:inputType="none"
                                android:maxLength="12"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null"
                                android:textSize="28sp"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/creditsale_LNR_salecash"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <com.mswipetech.wisepos.demo.sdk.customviews.DecAmtEditText
                                android:id="@+id/creditsale_TXT_salecash"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:ellipsize="start"
                                android:gravity="right|center_vertical"
                                android:hint="Sale cash"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLength="10"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textSize="22dp"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/creditsale_LNR_totalamount"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                android:id="@+id/creditsale_TXT_totalamount"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:ellipsize="start"
                                android:gravity="right|center_vertical"
                                android:hint="total amount"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textSize="22dp"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/creditsale_LBL_countrycodeprefix"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="(+91)"
                                android:textColor="#777777"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </TextView>

                            <EditText
                                android:id="@+id/creditsale_TXT_mobileno"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:ellipsize="start"
                                android:hint="Mobile No."
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="10"
                                android:paddingLeft="6dp"
                                android:singleLine="true"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >



                            <EditText
                                android:id="@+id/creditsale_TXT_invoice"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:ellipsize="start"
                                android:hint="Invoice no"
                                android:imeOptions="actionNext"
                                android:maxLength="30"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_email"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:ellipsize="start"
                                android:hint="Email(optional)"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLength="60"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_notes"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Notes(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_one"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra1(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_two"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra2(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_three"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra3(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_four"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra4(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_marginBottom="7dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_five"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra5(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_six"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra6(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_seven"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra7(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_eight"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra8(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_nine"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra9(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/creditsale_TXT_extra_ten"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_modified_states"
                                android:gravity="left|center_vertical"
                                android:hint="Extra10(optional)"
                                android:imeOptions="actionDone"
                                android:maxLength="2000"
                                android:minLines="4"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textSize="22dp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal" >

                            <Button
                                android:id="@+id/creditsale_BTN_amt_next"
                                android:layout_width="100dp"
                                android:layout_height="44dp"
                                android:background="@drawable/roundrectblue"
                                android:gravity="center"
                                android:text="Next"
                                android:textColor="#ffffff"
                                android:textSize="25dp"
                                android:typeface="sans" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>