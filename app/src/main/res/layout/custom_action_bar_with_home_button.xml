<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

    <ImageView
        android:id="@+id/iv_add_new"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/saved_icon_width_26"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_anyemi_web"
        android:visibility="gone" />

    <com.anyemi.recska.ui_components.MyTextViewArial
        android:id="@+id/title_text"
        style="@style/Widget.AppCompat.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_toEndOf="@+id/iv_add_new"
        android:layout_toRightOf="@+id/iv_add_new"
        android:gravity="center|right"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold" />




    <RelativeLayout
        android:id="@+id/rl_new_mails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:gravity="left|center"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/saved_icon_width_26"
            android:layout_height="@dimen/saved_icon_width_26"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/logohdpi"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_lr_new_mails"
            android:layout_width="@dimen/saved_icon_width_26"
            android:layout_height="@dimen/saved_icon_width_26"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="@dimen/bell_count_size"
            android:layout_height="@dimen/bell_count_size"
            android:layout_marginLeft="@dimen/bell_count_left_margin"
            android:layout_marginRight="@dimen/bell_count_right_margin"
            android:gravity="center"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/red_oval_color"
            android:textSize="8sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
