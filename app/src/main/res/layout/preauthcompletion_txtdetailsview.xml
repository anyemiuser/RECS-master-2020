<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_REL_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal">

        <com.mswipetech.wisepos.demo.sdk.customviews.DecAmtEditText
            android:id="@+id/preauthcompletiontxtdetails_TXT_amount"
            android:layout_width="@dimen/text_mount_layout_width"
            android:layout_height="@dimen/text_mount_layout_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/preauthcompletion_txtdetailsview_amount"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/light_grey" />

        <ImageButton
            android:id="@+id/preauthcompletiontxtdetails_cancel_BTN_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@id/preauthcompletiontxtdetails_TXT_amount"
            android:background="@drawable/clear"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/preauthcompletiontxtdetails_SCL_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/preauthcompletiontxtdetails_LNR_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/preauthcompletion_txtdetailsview_tx_date"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/label_font_small"
                    android:typeface="sans" />

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_TxDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/label_font_small"
                    android:typeface="sans" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_lbllast4digits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/preauthcompletion_txtdetailsview_last_4_digits"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/label_font_small"
                    android:typeface="sans" />

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_last4digits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/label_font_small" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_lblAuthNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/preauthcompletion_txtdetailsview_auth_code"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/label_font_small"
                    android:typeface="sans" />

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_AuthNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/label_font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_lblRRNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/preauthcompletion_txtdetailsview_receipt_retrieval_no"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/label_font_small"
                    android:typeface="sans" />

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_RRNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/label_font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_lblinvoicenum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/preauthcompletion_txtdetailsview_invoice_no"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/label_font_small"
                    android:typeface="sans" />

                <com.mswipetech.wisepos.demo.sdk.customviews.CustomTextView
                    android:id="@+id/preauthcompletiontxtdetails_LBL_invoicenum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/label_font_small" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/preauthcompletiontxtdetails_BTN_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/button_next_active" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>