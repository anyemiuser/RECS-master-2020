<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_REL_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5" >

    <include
        android:id="@+id/top_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/top_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="20dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#f5f5f5"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:id="@+id/changepassword_REL_passworddetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/changepassword_TXT_password"
                android:layout_width="250dip"
                android:layout_height="40dp"
                android:layout_below="@+id/changepassword_LBL_password"
                android:layout_marginBottom="7dp"
                android:background="@drawable/edittext_modified_states"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="6dp"
                android:textSize="22dp"
                android:typeface="sans" >
            </EditText>

            <EditText
                android:id="@+id/changepassword_TXT_newpassword"
                android:layout_width="250dip"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/edittext_modified_states"
                android:gravity="center_vertical"
                android:hint="New Password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="6dp"
                android:textSize="22dp"
                android:typeface="sans" >
            </EditText>

            <EditText
                android:id="@+id/changepassword_TXT_retypepassword"
                android:layout_width="250dip"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/edittext_modified_states"
                android:gravity="center_vertical"
                android:hint="Retype Password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="6dp"
                android:textSize="22dp"
                android:typeface="sans" >
            </EditText>

            <Button
                android:id="@+id/changepassword_BTN_submit"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundrectblue"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>