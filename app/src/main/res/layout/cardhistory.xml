<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_REL_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5">

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar" />

    <RelativeLayout
        android:layout_width="400dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:background="#f2f2f2">

        <RelativeLayout
            android:id="@+id/cardhistory_REL_cardhistory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardhistory_LBL_recordcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:gravity="center_vertical"
                android:text="1 of  20"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans"></TextView>

            <ScrollView
                android:id="@+id/cardhistory_SCL_cardhistory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardhistory_LBL_recordcount"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="6dp"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="3dp"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblTxStatus"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_TxStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblTxDateTime"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Tx Date"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_TxDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp"
                            android:typeface="sans" />
                    </LinearLayout>
                    <!--
                    <LinearLayout android:layout_width ="fill_parent" android:layout_height = "fill_parent"
                           android:background="#FFFFFF" android:orientation="vertical">
                       <TextView android:id="@+id/lsttrxstatus_LBL_lblCardholderName"
                        android:textSize="17dp" android:textColor="#777777"
                        android:typeface="sans"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Cardholder"/>
                    <TextView android:id="@+id/lsttrxstatus_LBL_CardholderName"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:typeface="sans"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:text=""/>
                    </LinearLayout>
                      -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblAmtRs"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/creditsale_LBL_Amtprefix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_AmtRs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblCreditCardNum"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Last 4 digits"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_CreditCardNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblTypeofTx"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_TypeofTx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblAuthNo"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Auth Code"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_AuthNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblRRNo"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="RR No"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_RRNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblStanID"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Stan Id"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_StanID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblVoucher"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Voucher"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_Voucher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblTerminalMessage"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Tx Message"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/lsttrxstatus_TXT_TerminalMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lsttrxstatus_LBL_lblNotes"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Notes"
                            android:textColor="#777777"
                            android:textSize="17dp"
                            android:typeface="sans" />

                        <EditText
                            android:id="@+id/lsttrxstatus_TXT_Notes"
                            android:layout_width="285dip"
                            android:layout_height="120dip"
                            android:layout_below="@+id/lsttrxstatus_LBL_lblNotes"
                            android:background="@drawable/whiterectborderblack"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="top|left"
                            android:maxLines="5"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"></EditText>

                    </LinearLayout>
                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:id="@+id/cardhistory_LNR_buttons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardhistory_SCL_cardhistory"
                android:layout_marginTop="-60dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cardhistory_BTN_previous"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundrectblue"
                    android:gravity="center"
                    android:text="&lt;"
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    android:typeface="sans" />

                <Button
                    android:id="@+id/cardhistory_BTN_next"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundrectblue"
                    android:gravity="center"
                    android:text="&gt;"
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    android:typeface="sans" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>