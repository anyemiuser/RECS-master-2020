<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anyemi.recska.NavigationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Agent Name" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_agent_name"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:textSize="14sp"
                        android:text="Transaction ID" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_transaction_id"
                        style="@style/TextView.Standard"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:textSize="18sp"
                        android:textColor="@color/TextColor.Black"
                        android:text="123456489" />


                    <com.anyemi.recska.ui_components.MyTextViewArial

                        style="@style/TextView.Header"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:textSize="14sp"
                        android:text="Payment Ref I'd" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_payment_ref_id"
                        style="@style/TextView.Standard"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:textSize="18sp"
                        android:text="123456789" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                <com.anyemi.recska.ui_components.MyTextViewArial
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:text="Bill Details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Tax Type"
                        android:visibility="gone"/>

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_tax_type"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Payment Date" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_payment_date"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Customer Name" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_c_name"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <TextView
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Payment Receipt" />

                    <TextView
                        android:id="@+id/tv_pay_receipt"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:gravity="left|center"
                        android:text="Service Number" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_assment_num"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <TextView
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Phone Number" />

                    <TextView
                        android:id="@+id/tv_phone_num"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Due Date" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_due_date"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                <com.anyemi.recska.ui_components.MyTextViewArial
                    style="@style/TextView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:text="Payment Details" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Payment Type" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_payment_type"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Bill Amount" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_due_amount"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <com.anyemi.recska.ui_components.MyTextViewBoldGotham
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Fine Amount" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_fine_amount"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <com.anyemi.recska.ui_components.MyTextViewArial
                            style="@style/TextView.Header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="left|center"
                            android:text="Adjustment Amount" />

                        <com.anyemi.recska.ui_components.MyTextViewArial
                            android:id="@+id/tv_adj_amount"
                            style="@style/TextView.Standard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left|center"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <com.anyemi.recska.ui_components.MyTextViewArial
                            style="@style/TextView.Header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="left|center"
                            android:text="Arrears" />

                        <com.anyemi.recska.ui_components.MyTextViewArial
                            android:id="@+id/tv_arrears_amount"
                            style="@style/TextView.Standard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left|center"
                            android:text="" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <com.anyemi.recska.ui_components.MyTextViewArial
                            style="@style/TextView.Header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="left|center"
                            android:text="Reconnection Fee" />

                        <com.anyemi.recska.ui_components.MyTextViewArial
                            android:id="@+id/tv_reconnection_fee"
                            style="@style/TextView.Standard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left|center"
                            android:text="" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.anyemi.recska.ui_components.MyTextViewArial
                            style="@style/TextView.Header"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="left|center"
                            android:text="Sur Charge" />

                        <com.anyemi.recska.ui_components.MyTextViewArial
                            android:id="@+id/tv_surcharge"
                            style="@style/TextView.Standard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left|center"
                            android:text="0" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.anyemi.recska.ui_components.MyTextViewArial
                            style="@style/TextView.Header"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="left|center"
                            android:text="User Charges" />

                        <com.anyemi.recska.ui_components.MyTextViewArial
                            android:id="@+id/tv_user_charges"
                            style="@style/TextView.Standard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left|center"
                            android:text="" />

                    </LinearLayout>



                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Bank Charges" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_bank_charges"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.anyemi.recska.ui_components.MyTextViewArial
                        style="@style/TextView.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="Total Amount" />

                    <com.anyemi.recska.ui_components.MyTextViewArial
                        android:id="@+id/tv_total_amount"
                        style="@style/TextView.Standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="" />

                </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/btn_print_on_device"
            style="@style/TextView.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:background="@color/primary"
            android:text="Print Invoice"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>