<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- the widgets for the emi option selection -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageButton
            android:id="@+id/emisale_BTN_emi_selection_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@drawable/button_arrownext_img_selector"
            android:enabled="false" />

        <ListView
            android:id="@+id/emisale_list_emi_selection"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/emisale_BTN_emi_selection_next"
            android:choiceMode="singleChoice"
            android:divider="@color/light_grey"
            android:dividerHeight="@dimen/divider_height_normal"/>
    </RelativeLayout>

</LinearLayout>