<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/img_slideshow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_slide_header_layout"
        android:layout_marginTop="10dp"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:background="@drawable/button_shape2" >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="fill_parent"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/img_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator"
            android:background="#88343434"
            android:ellipsize="end"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="#ededed"
            android:visibility="gone"/>

        <com.anyemi.recska.utils.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_pager"
            android:padding="10dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_slide"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_files_image_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/logohdpi"
            android:text="@string/loading_txt"
            android:textSize="@dimen/lr_listings_listview_text_size"
            android:textStyle="normal|bold"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_rental_img_upload_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:visibility="visible">

        </LinearLayout>

        <com.anyemi.recska.ui_components.MyTextViewArial
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Collections"
            style="@style/TextView.Header"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_apepdcl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:src="@drawable/apepdcl_logo"
                        android:text="APEPDCL" />

                    <TextView
                        style="@style/TextView.Standard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="APEPDCL" />

                </LinearLayout>

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/ll_cdma"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:src="@drawable/cdma_logo"
                        android:text="reviews" />

                    <TextView
                        style="@style/TextView.Standard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="CDMA" />

                </LinearLayout>



                <View
                    style="@style/Divider.Horizontal"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />



                <LinearLayout
                    android:id="@+id/ll_recs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:src="@drawable/recs_lancher"
                        android:text="reviews" />

                    <TextView
                        style="@style/TextView.Standard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="RECS" />

                </LinearLayout>



                <View
                    style="@style/Divider.Horizontal"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />



                <LinearLayout
                    android:id="@+id/ll_gvmc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:src="@drawable/gvmc_logo"
                        android:text="reviews" />

                    <TextView
                        style="@style/TextView.Standard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="GVMC" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <ListView
            android:id="@+id/lv_collection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_weight="1"
            android:nestedScrollingEnabled="true"
            android:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_list"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="gone"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>